{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "noUnusedLocals": true,
    "newLine": "LF",
    "resolveJsonModule": true,
  },
  "exclude": ["node_modules", "dist"]
}